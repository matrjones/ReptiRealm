@page "/login"
@rendermode InteractiveServer

@using ReptiRealm_WebApp.DTOs.Authentication
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">

            <div class="card shadow-sm border-2 border-dark">
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold mb-1">ReptiRealm</h2>
                        <p class="text-muted mb-0">Sign in to your account</p>
                    </div>

                    <EditForm Model="loginModel"
                              OnValidSubmit="HandleLogin"
                              FormName="loginForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                @errorMessage
                            </div>
                        }

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control"
                                       @bind-Value="loginModel.Email"
                                       type="email" />
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label class="form-label">Password</label>
                            <InputText class="form-control"
                                       @bind-Value="loginModel.Password"
                                       type="password" />
                        </div>

                        <!-- Login Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">
                                Login
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private LoginDto loginModel = new();
    private string errorMessage = null!;

    private async Task HandleLogin()
    {
        errorMessage = string.Empty; // Clear previous error

        var response = await Http.PostAsJsonAsync(
            "https://localhost:7264/api/Auth/login",
            loginModel);

        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = "Username or password is incorrect.";
        }
    }
}
